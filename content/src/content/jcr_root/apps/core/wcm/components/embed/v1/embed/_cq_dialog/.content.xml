<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Embed Component Dialog"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[core.wcm.components.embed.v1.editor]"
    helpPath="https://www.adobe.com/go/aem_cmp_embed_v1"
    trackingFeature="core-components:embed:v1">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <embedoptions
                                                granite:class="cmp-embed-option-selection"
                                                granite:hide="${!(cqDesign.enableHtmlMode &amp;&amp; cqDesign.enableSelectionMode)}"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                                                deleteHint="{Boolean}true"
                                                fieldLabel="Select Embed Type"
                                                ignoreData="{Boolean}false"
                                                name="./embedoption"
                                                vertical="{Boolean}false">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-dialog-radio-showhide-target=".cmp-embed-type-html,.cmp-embed-type-selection"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <html
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Free Form HTML"
                                                        value="htmlMode"/>
                                                    <embeddables
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Embeddables"
                                                        value="embeddableMode"/>
                                                </items>
                                            </embedoptions>
                                            <markup
                                                granite:class="cmp-embed-type-html"
                                                granite:hide="${!cqDesign.enableHtmlMode}"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                checked="{Boolean}true"
												required="{Boolean}true"
                                                fieldDescription="Leave empty to use the page title."
                                                fieldLabel="HTML Markup"
                                                name="./markup">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="htmlMode"/>
                                            </markup>
                                            <selectionMode
                                                granite:class="cmp-embed-type-selection"
                                                granite:hide="${!cqDesign.enableSelectionMode}"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                deleteHint="{Boolean}true"
                                                fieldLabel="Select Embeddable"
                                                name="./embedType">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="core/wcm/components/embed/v1/datasource/embedoptions"/>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-dialog-dropdown-showhide-target=".embed-type-dialog"
                                                    showhidetargetvalue="embeddableMode"/>
                                            </selectionMode>
                                            <advanced
                                                granite:class="cmp-embeddable-settings"
                                                granite:hide="${!cqDesign.enableSelectionMode}"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="core/wcm/components/embed/v1/datasource/embedsettings"/>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="embeddableMode"/>
                                            </advanced>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </properties>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
